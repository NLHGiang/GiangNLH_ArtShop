@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = @"/Views/Shared/_DefaultLayout.cshtml";
}

<div class="rounded bg-white p-4 my-3"
     style="max-width: 500px; margin: 0 auto;box-shadow: 0px 0px 30px rgba(187,51,255,1)">
    <h3 class="text-center m-0 p-0">Đổi mật khẩu</h3>
    <div style="background-color: #ffffff70;">
        <form>
            <div class="form-group my-2">
                <label for="inputUsername">Tên đăng nhập</label>
                <input type="text" class="form-control" id="inputUsername" placeholder="Tên đăng nhập">
            </div>
            <div class="form-group my-2">
                <label for="inputOldPassword4">Mật khẩu cũ</label>
                <input type="password" class="form-control" id="inputOldPassword4" placeholder="Mật khẩu cũ">
            </div>
            <div class="form-group my-2">
                <label for="inputNewPassword4">Mật khẩu mới</label>
                <input type="password" class="form-control" id="inputNewPassword4" placeholder="Mật khẩu mới">
            </div>
            <div class="row m-0 p-0">
                <button type="submit" class="btn rounded" onclick="location.href='#signin';">Đổi mật khẩu</button>
            </div>
        </form>
    </div>
</div>