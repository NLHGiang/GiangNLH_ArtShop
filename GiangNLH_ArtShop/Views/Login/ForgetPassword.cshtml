@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = @"/Views/Shared/_DefaultLayout.cshtml";
}

<div class="rounded bg-white p-4 my-3"
     style="max-width: 500px; margin: 0 auto;box-shadow: 0px 0px 30px rgba(187,51,255,1)">
    <h3 class="text-center m-0 p-0">Quên mật khẩu</h3>
    <div style="background-color: #ffffff70;">
        <form>
            <div class="form-group my-2">
                <label for="inputUsername">Tên đăng nhập</label>
                <input type="text" class="form-control" id="inputUsername" placeholder="Tên đăng nhập">
            </div>
            <div class="form-group my-2">
                <label for="inputOldPassword4">Email xác nhận</label>
                <input type="password" class="form-control" id="inputConfirmEmail" placeholder="Email xác nhận">
            </div>
            <div class="row m-0 p-0">
                <button type="submit" class="btn rounded" onclick="location.href='#signin';">Nhận mật khẩu mới</button>
            </div>
        </form>
    </div>
</div>